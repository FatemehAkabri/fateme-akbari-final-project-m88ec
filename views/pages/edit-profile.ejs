<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>view profile</title>
  <link rel="stylesheet" href="stylesheets/dashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<!-- firstName,lastName,userName,password,gender,phoneNumber,role -->

<body>
  <div class="profile-page-bg">
    <div class="card m-auto profile-card">

      <div class="card-body">
        <h3 class="mb-4">Edit INFORMATION</h3>
        <form action="/api/edit" method="post">
            <table class="profile-table">
                <tbody>
                    <tr>
                        <td>first name:</td>
                        <td>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="<%= user.firstName %>" name="firstName" value="<%= user.firstName %>">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>last name:</td>
                        <td>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="<%= user.lastName %>" name="lastName" value="<%= user.lastName %>">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>user name:</td>
                        <td>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="<%= user.userName %>" name="userName" value="<%= user.userName %>">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>gender:</td>
                        <td>
                            <select id="inputState" class="form-select" name="gender">
                                <option selected value="<%= user.gender %>">female</option>
                                <option value="admin">male</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>phone number:</td>
                        <td>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="<%= user.phoneNumber %>" name="phoneNumber" value="<%= user.phoneNumber %>">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>role:</td>
                        <td>
                            <select id="inputState" class="form-select" name="role">
                                <option selected value="<%= user.role %>">user</option>
                                <option value="admin">admin</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button type="submit" class="btn view">Save Change</button>
            <a href="/dashboard" class="btn view">Back</a>
        </form>
        
        
      
      </div>
    </div>


  </div>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>

</html>