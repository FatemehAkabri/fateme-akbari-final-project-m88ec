<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>dashboard</title>
  <link rel="stylesheet" href="stylesheets/dashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<!-- firstName,lastName,userName,password,gender,phoneNumber,role -->

<body>


  <nav class="navbar bg-navbar-color">
    <div class="container-fluid">
      <h2>welcome <%= user.firstName %></h2>
     
      <div class="btn-group">
        <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
   

        <!-- <img src="<%= user.avatar %>" class="avatar" alt="..." style="width: 50px;"> -->
        <img src="/images/<%= user.avatar %>" alt="" width="50" height="50" class="mb-4">
        </button>
        <ul class="dropdown-menu dropdown-menu-lg-end">
          <li><a class="dropdown-item"  href="/delete">delete account</a></li>
          <li><a class="dropdown-item" href="/api/auth/logout">log out</a></li>
        </ul>
      </div>
  </nav>

  <div class="dashboard-body">
    <div class="row">
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Personal Information</h5>
  
            <a href="/view-profile" class="btn view">view profile</a>
          </div>
        </div>
      </div>
  
  
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Edit Information</h5>

            <a href="/edit-profile" class="btn view">edit</a>
          </div>
        </div>
      </div>
  
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Personal Image </h5>
  
            <a href="/upload-avatar" class="btn view">change Image</a>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">show all article</h5>
  
            <a href="/api/account/articles" class="btn view">view more</a>
          </div>
        </div>
      </div>

    </div>
  </div>




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>

</html>